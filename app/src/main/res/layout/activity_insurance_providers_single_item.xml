<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:elevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.ipa.www.insuracepolicyapp.Utils.LetterImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/ivletter"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="12dp"
            android:id="@+id/tvInsuranceProvider"
            android:text="Insurance Provider"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/ivletter"
            android:textSize="24sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>