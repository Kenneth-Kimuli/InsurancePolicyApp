<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:elevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivmain"
            android:layout_marginLeft="11dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="11dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="12dp"
            android:id="@+id/tvmain"
            android:text="Main"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/ivmain"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvmain"
            android:layout_toRightOf="@id/ivmain"
            android:text="Description"
            android:id="@+id/tvdesmain"
            android:textSize="16dp"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/tvclick"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignBottom="@id/ivmain"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvdesmain"
            android:layout_marginTop="18dp"
            android:text="Click to Edit"
            android:textColor="#0000b3"
            android:textSize="12dp" />



    </RelativeLayout>
</android.support.v7.widget.CardView>